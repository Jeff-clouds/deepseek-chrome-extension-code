{
  "manifest_version": 3,
  "name": "AI Chat Exporter",
  "version": "1.3",
  "description": "Export DeepSeek, YuanBao AI and ChatGPT chat conversations to Markdown format.",
 "permissions": ["activeTab", "downloads", "scripting", "tabs", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "host_permissions": [
    "https://*.deepseek.com/*",
    "https://*.deepseek.ai/*",
    "https://*.yuanbao.tencent.com/*",
    "https://chatgpt.com/*",
    "https://*.doubao.com/*"
  ]
}
